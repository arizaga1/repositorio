#include <main.h>
#INCLUDE <math.h>
//PWM  Modulación por ancho de Pulso
//se utiliza para control de velocidad 
//de motores de CD
float contador=0;
void main()
{
   set_tris_c(0x02); 
   //para colocar los pines del puerto C como entrad o salida
   //0x02 pone en 1 lógico los pines c0 y C1 por lo tanto seran entradas
    setup_timer_2(T2_DIV_BY_16,249,1);      //1.0 ms overflow, 1.0 ms interrupt

   setup_ccp1(CCP_PWM);
   set_pwm1_duty((int16)0); 
 
 

 

  while(TRUE)
   {

 If(input(PIN_C1))
 {
      contador=contador+1; 
      set_pwm1_duty((int16)contador*100);
      delay_ms(200);
      //TODO: User Code
   }
   
   }

}
